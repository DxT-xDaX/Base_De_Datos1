<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200" prefWidth="300" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unam.mx.interfaz_abogados.controladores.ControladorCasosAbogado">

    <Label text="Ver Casos Vigentes del Abogado" />

    <HBox spacing="10">
        <Label text="ID Abogado:" />
        <TextField fx:id="txtIdAbogado" promptText="Ingresa ID" />
    </HBox>

    <HBox spacing="10">
        <Label text="Casos Vigentes:" />
        <TextField fx:id="txtCasos" editable="false" />
    </HBox>

    <Button onAction="#consultarCasos" text="Consultar" />
   <Button mnemonicParsing="false" text="Limpiar" onAction="#eventoLimpiarCasos"/>
</VBox>
